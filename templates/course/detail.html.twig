{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center text-capitalize">COURSE DETAIL</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('course_index') }}">COURSE LIST</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
                    <th>Major</th>
					<th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
				</tr>
			</thead>
			<tbody>
				<tr>
                {% if course.category.name != "" %}
                    <td>{{course.category.name}}</td>
                {% else %}
                    <td></td>
                {% endif %}
					<td>{{course.name }}</td>
                    <td>{{ course.startDate|date('d/m/Y')}}</td>
					<td>{{ course.endDate|date('d/m/Y')}}</td>
					<td>
						<a class="btn btn-info" href="{{ path('course_edit', {'id': course.id}) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('course_delete', {'id': course.id}) }}"
                  onclick= "return confirm('Are you sure to delete this course ?')"
                  >DELETE</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
