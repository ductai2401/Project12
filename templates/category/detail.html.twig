{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-primary text-center text-capitalize" style="font-family:Papyrus;">Major Detail</h3>
		<a class="btn btn-outline-dark" href="{{ path('category_index') }}">MAJOR LIST</a>
		<table class="table text-center mt-3", style="background-color: lightblue">
			<thead style="background-color: black">
				<tr style="color: #FFFFF0">
					<th>Name</th>
					<th>Description</th>
					<th>CourseList</th>
					
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						{{ category.name }}
					</td>
					<td>
						{{category.description }}
					</td>
					<td>
					{% for course in category.courseList %}
						<a href="{{ path('course_detail', {'id': course.id }) }}">
								{{ course.name }}
							</a>
							<br>
					{% endfor %}	
					{% if is_granted('ROLE_ADMIN') %}
					<td>
						<a class="btn btn-info" href="{{ path('category_edit', {'id': category.id}) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('category_delete', {'id': category.id}) }}" onclick="return confirm('Are you sure to delete this category ?')">DELETE</a>
					</td>
					{% endif %}
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}