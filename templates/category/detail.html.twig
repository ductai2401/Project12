{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center text-capitalize">Category Detail</h3>
		<a class="btn btn-outline-success mt-2" href="{{ path('category_index') }}">CATEGORY LIST</a>
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						{{ category.name }}
					</td>
					<td>
						{{category.description }}
					</td>
					
					<td>
						<a class="btn btn-info" href="{{ path('category_edit', {'id': category.id}) }}">EDIT</a>
						<a class="btn btn-warning" href="{{ path('category_delete', {'id': category.id}) }}" onclick="return confirm('Are you sure to delete this category ?')">DELETE</a>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}