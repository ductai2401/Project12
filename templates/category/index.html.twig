{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center">CATEGORY LIST</h3>
		{# <a class="btn btn-outline-success mt-2" href="{{ path('teacher_add') }}">ADD TEACHER</a> #}
		<table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
                    <th>Description</th>
					<th>Menu</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.name }}</td>
                        <th>{{category.description}}</th>
						<td>
							<a href="{{ path('category_detail', {'id': category.id}) }}">
							</a>
						</td>
						<td>
							{# <a class="btn btn-info" href="{{ path('category_edit', {'id': category.id}) }}">EDIT</a> #}
							<a class="btn btn-warning" href="{{ path('category_delete', {'id':category.id}) }}" onclick="return confirm('Are you sure to delete this category ?')">DELETE</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
