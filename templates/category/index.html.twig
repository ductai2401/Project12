{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
		<h3 class="text-success text-center", style="font-size: 2rem; font-family:Papyrus;">MAJOR LIST</h3>
		{% if is_granted('ROLE_ADMIN') %}
	    <a class="btn btn-outline-dark" href="{{ path('category_add') }}">ADD MAJOR</a>
		{% endif %}
		<table class="table text-center mt-3", style="background-color: lightblue">
			<thead style="background-color: black">
				<tr style="color: #FFFFF0">
					<th>ID</th>
					<th>Name</th>
                    <th>Description</th>
					{% if is_granted('ROLE_ADMIN') %}
						<th>Action</th>
					{% endif %}
				</tr>
			</thead>

			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.name }}</td>
                        <th>{{category.description}}</th>
						{% if is_granted('ROLE_ADMIN') %}
						<td>
						    <a class="btn btn-info" href="{{ path('category_detail',{'id': category.id}) }}">Detail</a>
							<a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">EDIT</a>
							<a class="btn btn-danger" href="{{ path('category_delete', {'id':category.id}) }}" onclick="return confirm('Are you sure to delete this category ?')">DELETE</a>
						</td>
						{% else %}
						<td>
						    <a class="btn btn-success" href="{{ path('category_detail',{'id': category.id}) }}">Detail</a>
						</td>
						{% endif %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
